<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hearthappy.vma.MainActivity">


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ViewModelAutomationX"
        app:layout_constraintBottom_toTopOf="@+id/btnGoSharedPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoSharedPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="共享ViewModel实例"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnGetImages" />

    <Button
        android:id="@+id/btnGetImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取图片列表"
        app:layout_constraintBottom_toTopOf="@+id/btnQuotes" />

    <Button
        android:id="@+id/btnQuotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取名句"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!--暂且支持具体类型，不支持泛型的检测-->
   <!-- <Button
        android:id="@+id/btnGetStorageData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取存储数据"
        app:layout_constraintBottom_toBottomOf="parent" />-->

</androidx.constraintlayout.widget.ConstraintLayout>